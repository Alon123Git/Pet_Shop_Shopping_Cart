    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <label asp-for="AnimalName">Name</label>
        <input type="text" asp-for="AnimalName" />
        <span asp-validation-for="AnimalName"></span>

        <label asp-for="Age">Name</label>
        <input type="text" asp-for="Age" />
        <span asp-validation-for="Age"></span>

        <label asp-for="ImageUrl">Name</label>
        <input type="file" asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl"></span>

        <label asp-for="ShortDescription">Name</label>
        <input type="text" asp-for="ShortDescription" />
        <span asp-validation-for="ShortDescription"></span>

        <label asp-for="Price">Price</label>
        <input type="text" asp-for="Price" />
        <span asp-validation-for="Price"></span>

        <div class="col-12">
            <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
            <a asp-asp-controller="Animal" asp-action="Admin" class="btn btn-secondary" style="sidth:150px;">
                Back to List
            </a>
        </div>
    </form>

