@model Models.ViewModels.OrderVM
@using Utility

<form method="post">
    <input asp-for="@Model.orderHeaderSingle.Id" hidden />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light m-lg-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summery
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">Pickup Details: </span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.Name" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeaderSingle.Name" class="text-danger"></span>
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.Name" readonly type="text" class="form-control" />
                                    }*@
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @* @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee = true))
                                    {*@
                                    <input asp-for="orderHeaderSingle.PhoneNumber" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeaderSingle.PhoneNumber" class="text-danger"></span>
                                    @* }
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.PhoneNumber" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Adress</div>
                                <div class="col-9">
                                    @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.StreetAdress" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeaderSingle.StreetAdress" class="text-danger"></span>
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.StreetAdress" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @* @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.City" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeaderSingle.City" class="text-danger"></span>
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.City" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.State" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeaderSingle.State" class="text-danger"></span>
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.State" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.PostalCode" type="text" class="form-control" />
                                    <span asp-validation-for="orderHeaderSingle.PostalCode" class="text-danger"></span>
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.PostalCode" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            @*<div class="row my-1">
                            <div class="col-3">Email</div>
                            <div class="col-9">
                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                            <input asp-for="orderHeaderSingle.applicationUser.Email" type="text" class="form-control" />
                            <span asp-validation-for="orderHeaderSingle.applicationUser.Email" class="text-danger"></span>
                            }
                            else
                            {
                            <input asp-for="orderHeaderSingle.applicationUser.Email" readonly type="text" class="form-control" />
                            }
                            </div>
                            </div>*@
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input value="@Model.orderHeaderSingle.OrderDate.ToShortDateString()" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.Carrier" id="carrier" type="text" class="form-control" />
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.Carrier" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking Number</div>
                                <div class="col-9">
                                    @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {*@
                                    <input asp-for="orderHeaderSingle.TrackingNumber" id="trackingNumber" type="text" class="form-control" />
                                    @*}
                                    else
                                    {
                                    <input asp-for="orderHeaderSingle.TrackingNumber" readonly type="text" class="form-control" />
                                    }*@
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input value="@Model.orderHeaderSingle.ShippingDate.ToShortDateString()" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {*@
                            <div class="row my-1">
                                <div class="col-3">Session ID</div>
                                <div class="col-9">
                                    <input asp-for="orderHeaderSingle.SessionId" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                    <input asp-for="orderHeaderSingle.PaymenIntentId" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            @*}*@
                            <div class="row my-1">
                                @if (Model.orderHeaderSingle.SessionId == null)
                                {
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">
                                        <input value="@Model.orderHeaderSingle.PatmentDueDate.ToShortDateString()" readonly type="text" class="form-control" />
                                    </div>
                                }
                                else
                                {
                                    <div class="col-3">Payment Date</div>
                                    <div class="col-9">
                                        <input value="@Model.orderHeaderSingle.PaymentDate.ToShortDateString()" readonly type="text" class="form-control" />

                                    </div>
                                }
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input asp-for="orderHeaderSingle.PatmentStatus" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <input type="submit" asp-action="UpdateOrderDetails" class="btn btn-warning form-control my-1" value="Update Order Details" />


                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summery</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.orderHeaderSingle.OrderStatus</label>

                            <ul class="list-group mb-3">
                                @foreach (var detail in Model.orderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-8 text-primary">@detail.animal.AnimalName</h6>
                                                <small class="text-muted">Price : @detail.animal.Price.ToString("c")</small> <br />
                                                <small class="text-muted">Quantity : @detail.Count</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((detail.Count * detail.animal.Price).ToString("c"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL</h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.orderHeaderSingle.OrderTotal.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @*@if (Model.orderHeaderSingle.PatmentStatus == SD.PaymentStatusDelayedPayment &&
                            Model.orderHeaderSingle.OrderStatus == SD.StatusShipped)
                            {*@
                            <input type="submit" class="btn-primary form-control my-1" value="Pay Now" />
                            @*}*@
                            @*@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {*@
                            @*@if (Model.orderHeaderSingle.OrderStatus == SD.StatusApproved)
                            {*@
                            <input type="submit" asp-action="StartProcessing" class="btn-primary form-control my-1" value="Start Processing" />
                            @*}*@
                            @if (Model.orderHeaderSingle.OrderStatus == SD.StatusInProcess)
                            {
                                <input type="submit" onclick="return validateInput()"
                                   asp-action="ShipOrder" class="btn-primary form-control my-1" value="Ship Order" />
                            }
                            @*}*@
                            @if (Model.orderHeaderSingle.PatmentStatus != SD.StatusRefunded &&
                            Model.orderHeaderSingle.OrderStatus != SD.StatusCancelled &&
                            Model.orderHeaderSingle.OrderStatus != SD.StatusShipped)
                            {
                                <input type="submit" asp-action="CancelOrder" class="btn-danger form-control my-1" value="Cancel Order" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateInput() {
            if (document.getElementById("trackingNumber").value == "" && document.getElementById("carrier").value == "") {
                alert("Track number and crrier is missing");
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter tracking number!',
                });
                return false
            }
            if (document.getElementById("trackingNumber").value == "") {
                alert("Track number is missing");
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter tracking number!',
                });
                return false
            }
            if (document.getElementById("carrier").value == "") {
                alert("Crrier is missing");
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter carrier!',
                });
                return false
            }
            return true;
        }
    </script>
}