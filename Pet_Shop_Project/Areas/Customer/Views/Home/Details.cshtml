<body>
    <form method="post">
        <input hidden asp-for="AnimalId" />
        <div class="card container">
            <div class="card-header bg-primary text-light m-lg-0 row">
                <div class="col-12 col-md-6">
                    <h1 class="text-while-50">@Model.animal.AnimalName</h1>
                    <p class="text-warning" style="width:30px;height:30px;">Age @Model.animal.Age</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px">@Model.animal.AnimalName</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Price before discount: <strike>@Model.animal.PriceBeforeDiscount.ToString("c")</strike></h5>
                            </div>
                            <div class="row-pl-2">
                                <h5 class="text-muted"> Price: @Model.animal.Price</h5>
                            </div>
                        </div>
                        <div class="text-secondary">@Html.Raw(Model.animal.ShortDescription)</div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-2 text-primary"><h4>Count</h4></div>
                        <div class="col-10"><input asp-for="count" class="form-control" /></div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center">
                    <img src="@Model.animal.ImageUrl" width="100%" class="rounded" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btnalert-success form-control" style="height:50px;" asp-action="Index">Back to List</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button asp-for="" type="submit" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
    </form>
</body>